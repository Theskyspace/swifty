{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native", // Use React Native JSX
    "esModuleInterop": true,
    "skipLibCheck": true, // Avoid type conflicts between dependencies
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
